<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#EEE1F6"
    app:cardCornerRadius="84dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <ImageView
            android:id="@+id/imagenAnime"

            android:layout_width="99dp"
            android:layout_height="125dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/nombreAnime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imagenAnime"
            android:fontFamily="casual"
            android:text="AnimeFavorito"
            android:textAlignment="textStart"
            android:textColor="@color/azulESCOM"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>