<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bienvenido">

    <LinearLayout
        android:layout_width="457dp"
        android:layout_height="755dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bckground"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267">

        <TextView
            android:id="@+id/lblbienvenido"
            style="@style/estiloTextView"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_marginTop="104dp"
            android:hint="Bienvenido"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAceptar"
            style="@style/estiloBoton"
            android:layout_marginTop="100dp"
            android:src="@drawable/empresas2"
            app:civ_border_color="#FF000000"
            app:civ_border_width="5dp"
            app:civ_circle_background_color="#79ffffff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/s1"
            app:civ_border_color="#FF000000"
            app:civ_border_width="5dp"
            app:civ_circle_background_color="#79ffffff" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>